{
  "name": "solid-app-kit",
  "version": "1.6.1",
  "bin": {
    "solid-app-kit": "./lib/cli.js"
  },
  "description": "A server that includes both a pod server and an app",
  "files": [
    "src",
    "lib"
  ],
  "main": "src/index.ts",
  "scripts": {
    "build": "babel src -d lib --source-maps --extensions \".ts\"",
    "coverage": "jest --collect-coverage",
    "dev": "ts-node-dev src/cli public/",
    "jest": "jest",
    "lint": "eslint src/ test/ --ext .ts",
    "postversion": "git push && git push --tags && npm publish",
    "prettier": "prettier --write \"{src,test,__mocks__}/**/*.ts\"",
    "preversion": "npm test",
    "start": "NODE_EXTRA_CA_CERTS=myCA.pem DEBUG=* HTTPS_DOMAIN=lolcathost.de node lib/cli public/",
    "test": "npm run build && npm run lint && npm run jest",
    "version": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/michielbdejong/solid-app-kit.git"
  },
  "keywords": [
    "Solid"
  ],
  "author": "Michiel B. de Jong",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/michielbdejong/solid-app-kit/issues"
  },
  "homepage": "https://github.com/michielbdejong/solid-app-kit#readme",
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.7",
    "@babel/preset-env": "^7.8.7",
    "@babel/preset-typescript": "^7.8.3",
    "@types/jest": "^25.1.3",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.3",
    "jest": "^25.2.4",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "dependencies": {
    "@types/koa-static": "^4.0.1",
    "@types/redis": "^2.8.17",
    "buffer-to-stream": "^1.0.0",
    "koa": "^2.11.0",
    "koa-404-handler": "0.0.2",
    "koa-better-error-handler": "^3.0.5",
    "koa-send": "^5.0.0",
    "koa-static": "^5.0.0",
    "nodemailer": "^6.4.5",
    "path": "^0.12.7",
    "redis": "^3.0.2",
    "solid-idp": "^0.1.6-build2",
    "wac-ldp": "^1.1.3"
  }
}
